<!DOCTYPE html>
<html lang="en">
<head>
    
    {{>headerlinks}}

  </head>
<body>
    
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            
            <div class="main_content">
                
                <form class="temperature_form">
                    <input type="text" id="cityName" placeholder="Enter the name of your City" autocomplete="off">
                    <input type="submit" value="Search" id="submitButton">
                </form>
                
            </div>

            <div class="temperatureInformation">
                
                <div class="top_layer">
                    <p id="day">Tuesday</p>
                    <p id="today_date">24 NOVEMBER</p>
                </div>
            

                <div class="main_layer">
                    <p id="city_name">Output here</p>
                    
                    <div class="middle_layer data_hide">
                        <p id="temperature"><span>0</span><sup>o</sup>C</p>
                        <p id="temperature_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
                </div>

            </div>

        </div>
      </div>
    </div>

    <!-- footer -->
    {{>footer}}

    <script src="js/main.js"></script>

</body>
</html>